.problem {
  line-height:40rpx;
  font-family:PingFangSC-Regular;
  font-size:28rpx;
  font-weight:400;
}
.problem .title {
  color:rgba(153,153,153,1);
  line-height: 80rpx;
  padding: 0 0 0 30rpx;
}
.problem .section {
  background: #fff;
  padding: 24rpx 30rpx;
  border-bottom:1rpx solid rgba(229,229,229,1);
}
.problem .section view {
  color:rgba(34,34,34,1);
}
.problem .section text {
  font-size:24rpx;
  color:rgba(153,153,153,1);
  line-height:34rpx;
}