page {
  color: #232323;
  background: #f2f2f2;
  font-size: 30rpx;
  margin: 0 0 150rpx 0;
}

.list-item {
  border-radius: 15rpx;
  background: #fff;
  padding: 24rpx 30rpx;
  margin: 20rpx 22rpx;
  box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.2), 0 6rpx 20rpx 0 rgba(0, 0, 0, 0.19);
  animation-duration: 1s;
  animation-fill-mode: forwards;
  animation-timing-function: ease-in-out;
  opacity: 0;
}
.item-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-title text:nth-of-type(1) {
  color: #222222;

}
.item-title text:nth-of-type(2) {
  flex: 0 0 240rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.item-title text:nth-of-type(3) {
  color: #F95262;
}
.item-content {
  border-top: 1rpx solid #F2F2F2;
  color: #7E7E7E;
  margin: 20rpx auto 0;
  font-size: 28rpx;
  /* height: 157rpx; */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 25rpx 0 0;
  line-height: 2;
}
.item-content view:first-child {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #4AB6CA;
  /* flex-wrap: nowrap; */
}
.item-content>text {
  display: block;
}
