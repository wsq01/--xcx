<view class="container">
  <view class="padding-lr">
    <!--搜索框 -->
    <view class="weui-search-bar margin-tb">
      <view class="weui-search-bar__form">
        <!--点击之后，出现input框 -->
        <view class="weui-search-bar__box">
          <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
          <input type="text" class="weui-search-bar__input" placeholder="按照设备号查找记录" value="{{inputVal}}"
            focus="{{inputShowed}}" bindinput="inputTyping" />
          <!--输入款字数大于0，则显示清除按钮 -->
          <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
            <icon type="clear" size="14"></icon>
          </view>
        </view>
      </view>
      <!--动态出现的“取消”键 -->
      <view class="weui-search-bar__cancel-btn" wx:if="{{inputVal.length > 0}}" bindtap="bindSearch">查询</view>
    </view>
    <view class="statebar" style="width: 100%;height: 80rpx;white-space:nowrap;">
      <scroll-view scroll-x class="typebox">
        <block wx:for="{{list}}" wx:for-index="idx" wx:for-item="item">
          <view class="typeItem margin-right {{active==idx?'typeItemactive':''}}" data-index="{{idx}}"
            data-current="{{idx}}" bindtap="bindbar">{{item.title}}</view>
        </block>
      </scroll-view>
    </view>
    <swiper current="{{active}}" duration="300" bindchange="swiperTabView">
      <swiper-item>
        <view class="yearfee bg-white padding-tb">
          <view class="flex justify-between itemLine">
            <view class="bigtxt">设备号：520439</view>
            <view class="bigtxt">接收人：13699678566</view>
          </view>
          <view class="flex justify-between itemLine">
            <text>报警日期：2021-05-21 16：22：35</text>
          </view>
          <view class="flex justify-between itemLine">
            <text>所属机构：智冷销售部测试</text>
            <text>消耗机构：智冷销售部测试</text>
          </view>
        </view>
      </swiper-item>
          <swiper-item>
        <view>2</view>
      </swiper-item>
          <swiper-item>
        <view>3</view>
      </swiper-item>
      <swiper-item>
        <view>4</view>
      </swiper-item>
      <swiper-item>
        <view>5</view>
      </swiper-item>
    </swiper>
  </view>
</view>