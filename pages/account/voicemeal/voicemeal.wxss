/* pages/account/yearbill/yearbill.wxss */
.boxList{
  margin: 30rpx 0;
}
.boxList .deviceItem{
  height: 132rpx;
  width: 100%;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  
}
.boxList .active{
  height: 132rpx;
  width: 100%;
  background: url('http://www.ccsc58.cc/leng/little/image/payactive.png') no-repeat;
  background-size: contain;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  color: #fff!important;
  
}
.boxList .deviceItem .itemTop{
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.boxList .deviceItem .itemButtom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.deviceItem .itemTop .bigtxt{
  font-size: 30rpx;
  font-weight: 550;
}
.itemButtom text{
  color: #999;
}
.boxList .active .itemButtom text{
  color: #fff!important;
} 
.bottom-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 100;
  height: 100rpx;
  align-items: center;
}
.bottom-btn button{
  border-radius: 60rpx;
}
.money{
  color: #FF2929;
  font-size: 32rpx;
}
.payNum{
  display: inline-block;
  width: 120rpx;
  height: 50rpx;
  border:1px solid #ededed;
}