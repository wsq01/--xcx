/* pages/account/yearbill/yearbill.wxss */
.boxList{
  margin: 30rpx 0;
}
.boxList .deviceItem{
  height: 132rpx;
  width: 100%;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  
}
.boxList .active{
  height: 132rpx;
  width: 100%;
  background: url('http://www.ccsc58.cc/leng/little/image/payactive.png') no-repeat;
  background-size: contain;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  color: #fff!important;
  
}
.boxList .deviceItem .itemTop{
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.boxList .deviceItem .itemButtom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.deviceItem .itemTop .bigtxt{
  font-size: 30rpx;
  font-weight: 550;
}
.itemButtom text{
  color: #999;
}
.boxList .active .itemButtom text{
  color: #fff!important;
}
.select_box{
  background: #fff;
  width: 200rpx;
  position: relative;
  margin: 20rpx 0 0;
 }
 .select{
  box-sizing: border-box;
  width: 200rpx;
  height: 70rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
 }
 .select_text{
  font-size: 30rpx;
  flex: 1;
 }
 .select_img{
  width: 24rpx;
  height: 18rpx;
  display: block;
  transition:transform 0.3s;
 }
 .select_img_rotate{
  transform:rotate(180deg); 
 }
 .option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
 }
 .option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
 }
 .bottom-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 100;
  height: 100rpx;
  align-items: center;
}
.bottom-btn button{
  border-radius: 60rpx;
}
.money{
  color: #FF2929;
  font-size: 32rpx;
}