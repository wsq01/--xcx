ec-canvas {
  position: absolute;
  top: 20rpx;
  bottom: 100rpx;
  left: 0;
  right: 0;
}
.container {
  position: relative;
  width: 90%;
  height: 900rpx;
  margin: 0 auto;
}
.temp {
  margin: 50rpx;
}
.title {
  margin: 10rpx 0 0 10rpx;
  font-weight: bold;
}
.item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1rpx solid #ccc;
  line-height: 80rpx;
  font-size: 24rpx;
  align-items: center;
  padding: 0 10rpx;
}

.swiper {
  height: 80%;
}
.tab {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height: 86rpx;
  background: #fff;
  position: relative;
}
.tab view {
  border-bottom: 4rpx solid transparent;
  transition: .2s all linear;
}
.tab .active {
  color:rgba(91,140,247,1);
  border-bottom: 4rpx solid rgba(91,140,247,1);
}
.tab-swiper {
  margin: 20rpx;
  background: #fff;
  font-size: 24rpx;
  padding: 0 20rpx 20rpx;
}
.tab-swiper .lists-title {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color:rgba(153,153,153,1);
  text-align: center;
  line-height: 88rpx;
}
.tab-swiper .lists-content {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color:rgba(34,34,34,1);
  text-align: center;
  line-height: 80rpx;
}
.tab-swiper .lists-content:nth-child(2n) {
  background: rgba(246,246,246,1);
}
.tab-swiper .lists-content view,
.tab-swiper .lists-title view {
  flex: 0 0 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.tab-swiper .lists-content view:nth-child(3),
.tab-swiper .lists-title view:nth-child(3) {
  flex: 0 0 25%;
}
.tab-swiper .lists-content view:nth-child(4),
.tab-swiper .lists-title view:nth-child(4) {
  flex: 0 0 15%;
}
/* 底线 */
.bottom-split {
  font-size:26rpx;
  font-weight:400;
  color:rgba(204,204,204,1);
  line-height:38rpx;
  text-align: center;
}
.bottom-split text {
  display: inline-block;
  vertical-align: middle;
  width: 80rpx;
  height: 2rpx;
  margin: 0 24rpx;
  background: rgba(221,221,221,1);
}
.tab-container {
  box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.2), 0 6rpx 20rpx 0 rgba(0, 0, 0, 0.19);
  border-bottom: 1rpx solid #eee;
}