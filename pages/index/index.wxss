
page {
  color: #232323;
  background: #f2f2f2;
  font-size: 30rpx;
  /* margin-bottom: 150rpx; */
  padding-bottom: 150rpx;
}
.banner image {
  width: 100%;
  height: 355rpx;
}
.prodect {
  border-radius: 15rpx;
  margin: 17rpx 22rpx;
  background: #fff;
  display: flex;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
  padding: 38rpx 0;
}
.prodect .day {
  color: #62B7C7
}
.parameter {
  position: relative;
  background: #fff;
  margin: 50rpx 22rpx 17rpx;
  border-radius: 15rpx;
  border:2rpx solid rgba(27,27,27,1);
}
.parameter-title {
  position: absolute;
  width: 272rpx;
  height: 63rpx;
  top: -32rpx;
  left: 50%;
  transform: translate(-50%, 0);
  text-align: center;
  line-height: 63rpx;
}
.parameter-title text {
  position: absolute;
  left: 50%;
  top: 45%;
  transform: translate(-50%, -50%);
}
.parameter-title image {
  width: 100%;
  height: 100%;
}
.parameter-content {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: flex-start;
  margin: 80rpx auto 44rpx;
}
.parameter-content .parameter-content-item {
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  align-items: center;
  flex: 1;
}
.parameter-content .parameter-content-item image {
  width: 39rpx;
  height: 24rpx;
  margin: 40rpx auto 40rpx;
}
.advice {
  margin: 0 22rpx 17rpx;
  background: #fff;
  padding: 63rpx 53rpx;
  border-radius: 15rpx;
}
.advice-item {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  line-height: 60rpx;

}
.advice-item image {
  flex: 0 0 40rpx;
  height: 40rpx;
  margin: 0 21rpx 0 0;
  vertical-align: top;
}


.banner .more {
  display: inline-block;
  width: 42rpx;
  height: 34rpx;
  position: absolute;
  top: 68rpx;
  left: 34rpx;
}

.mydevices {
  width: 450rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 15rpx;
  position: absolute;
  top: 122rpx;
  left: 22rpx;
  z-index: 99;
  text-align: center;
}

.mydevices .inner-device {
  width: 376rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  margin: 40rpx auto;
  border-radius: 46rpx;
  position: relative;
}

.mydevices .inner-device:first-child {
  margin-top: 80rpx;
}

.mydevices .inner-device .devices-list-img {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 27rpx;
  left: 42rpx;
}

.mydevices .inner-device .list-devicenums {
  font-size: 30rpx;
}

.mydevices .inner-device .hover-nums {
  width: 36rpx;
  height: 34rpx;
  position: absolute;
  top: 28rpx;
  right: 28rpx;
}

.suspend-container {
  position: fixed;
  bottom: 30%;
  right: 50rpx;
}
.suspend-container button {
  position: absolute;
  height: 70rpx;
  width: 70rpx;
  background: transparent !important;
}
.suspend-container button::after {
  border: none;
}
.suspend-container image {
  width: 70rpx;
  height: 70rpx;
}

.empty {
  width: 100%;
  height: 1070rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty image {
  width: 463rpx;
  height: 294rpx;
  margin: 0 auto 55rpx;
}
.empty text {
  color: #7F7F7F;
  font-size: 30rpx;
}
.chart-container {
  position: relative;
  height: 800rpx;
  margin: 22rpx;
  background: #fff;
  border-radius: 15rpx;
}
ec-canvas {
  position: absolute;
  left: 0;
  top: 22rpx;
  bottom: 22rpx;
  right: 0;
}
.chart-btn {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 20rpx;
  width: 100%;
}
.chart-btn button {
  color: #fff;
  background: #54bfcb;
  font-size: 30rpx;
  border-radius: 30rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
}
button {
  /* background: #fff; */
  /* line-height: 1; */
  margin: 0;
}
button::after {
  border: none;
}