		<button class="btn" hidden="{{isFinished}}" bindtap="upload">上传云端</button>
	</view> -->
</view>
<view wx:else></view>


<view class="modal zoomIn" hidden="{{!isShowModal}}">
<view class="content">
  <progress show-info="true" activeColor="rgba(85, 190, 202, 1)" percent="{{percent}}" bindactiveend="finish" active-mode="forwards" active />
</view>
</view>