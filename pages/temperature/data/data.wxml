<view class="result" wx:if="{{showPage === 'default'}}">
  <canvas id="dashboard" type="2d" style="width: {{canvasWidth }}px;height: {{canvasWidth * 5/8}}px;"></canvas>

	<view class="item">
		<text>采集间隔</text>
		<text>{{deviceParams[8]}}分钟</text>
	</view>
  <view class="menu-list">
  <view class="menu-item" wx:for="{{menuList}}" wx:key="{{index}}" data-tap="{{item.tap}}" bindtap="toPage">
    <view class="item-left">
      <text>{{item.text}}</text>
    </view>
    <view class="item-right">
      <image src="../../../images/icon-arrow@2x.png"></image>
    </view>
  </view>
</view>
	

