page {
  background:#f2f2f2;
}
.form{
  width: 100%;
}
.form .form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin:40rpx 22rpx 0;
  position: relative;
  background: #fff;
  height: 106rpx;
  line-height: 106rpx;
  border-radius: 15rpx;
}
.form .form-item label {
  position: absolute;
  left: 30rpx;
  top: 0;
  font-size: 32rpx;
}
.form .form-item input{
  width: 100%;
  padding: 0 40rpx 0 40rpx;
  font-size: 28rpx;
}
.form .form-sms{
  position: relative;
  width: 460rpx;
}
.sms-btn {
  height: 106rpx;
  text-align: center;
  /* position: absolute; */
  /* right: 28rpx; */
  font-size: 26rpx;
  color: #fff !important;
  background:#82C6D3 !important;
  border-radius:53rpx;
  /* top: 50%;
  transform: translate(0, -50%);
  z-index: 100; */
  line-height: 106rpx;
  border: none;
  /* padding:0 20rpx; */
  width: 220rpx;
  margin:40rpx 22rpx 0;
}
.form .form-submit image{
  width: 517rpx;
  height: 138rpx;
  display: block;
  margin: 20rpx auto 0;
}
.sms-group {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.submit{
  width: 480rpx;
  margin: 50rpx auto;
  background:#82C6D3 !important;
  border-radius:55rpx;
  color:#fff !important;
}
.submit::after {
  border: none;
}
.submit-disabled {
  background:rgba(130,198,211,0.4) !important;
}