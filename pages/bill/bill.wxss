page {
  color: #232323;
  background: #f2f2f2;
  font-size: 30rpx;
}
.list-item {
  border-radius: 15rpx;
  background: #fff;
  padding: 24rpx 30rpx;
  margin: 20rpx 22rpx;
  box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.2), 0 6rpx 20rpx 0 rgba(0, 0, 0, 0.19);
  animation-duration: 1s;
  animation-fill-mode: forwards;
  animation-timing-function: ease-in-out;
  opacity: 0;
}
.item-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-title text:nth-of-type(1) {
  color: #222222;

}
.item-title text:nth-of-type(2) {
  color: #A8A7A7;
}
.item-content {
  border-top: 1rpx solid #F2F2F2;
  border-bottom: 1rpx solid #F2F2F2;
  color: #7E7E7E;
  margin: 20rpx auto;
  font-size: 28rpx;
  height: 157rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.item-footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  align-items: center;
}
.item-footer text:nth-child(1) {
  color: #242424;
}
.item-footer text:nth-child(1) text {
  color: #FA4A62;
}
.item-footer button:nth-child(2) {
  border: 2rpx solid #82C6D3;
  border-radius: 30rpx;
  padding: 16rpx 26rpx;
  color: #82C6D3;
  font-size: 28rpx;
}
button {
  background: #fff;
  line-height: 1;
  margin: 0;
}
button::after {
  border: none;
}

.empty {
  width: 100%;
  height: 1070rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty image {
  width: 463rpx;
  height: 294rpx;
  margin: 0 auto 55rpx;
}
.empty text {
  color: #7F7F7F;
  font-size: 30rpx;
}